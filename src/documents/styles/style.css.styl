//- MRK - global variables
LIGHTCOLOR = #e50
DARKCOLOR = #c00

//- MRK - define default link colors
a, a:link
  cursor pointer        //- Links show hand when cursor over link
  color LIGHTCOLOR

a:hover
  color DARKCOLOR

//- MRK - adjust color and size of text in navbar
.navbar .nav > .active > a:hover, .navbar .nav > .active > a:focus, .navbar .nav > li > a:hover, .navbar .nav > li > a:focus
  color DARKCOLOR

.navbar .nav > li > a, .navbar .nav > .active > a
  color LIGHTCOLOR
//- MRK - If I won't to make navbar font larger, I need to scale it appropriately for all media sizes.
//  font-size 20px

@media (min-width: 980px)
  .navbar
    width 940px
    margin-left auto
    margin-right auto
