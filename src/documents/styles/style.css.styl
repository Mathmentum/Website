//- MRK - place light gray line at top of all tables.
table
  tfoot, tbody
    th
      border-top 1px solid #DDD

//- MRK - leave 30px border on bottom of page
footer
  padding-bottom: 30px

//- MRK - stylus mixin so that wrapper below needs only one line
//- MRK - to specify box shadow
box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  box-shadow arguments

//- MRK - provides maximum with for content.  This is main holder of content.
.wrapper
  width auto
  @media (min-width: 980px)
    width 980px
  margin-left auto
  margin-right auto
  background-color #fff
  box-shadow 0 0 6px #000


@media (max-width: 767px)
